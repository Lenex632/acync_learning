<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ app.router.static.url_for(filename='styles.css') }}">
    <title>{{ title }}</title>
</head>

<body class="container">
    <h1 class="text-center mt-4">{{ title }}</h1>

    <div id="settings" class="container col-12">
        {% for i in range(pulls) %}
            <div id="{{ i }}" class="pull">
                <button class="btn btn-primary color">Blue</button>
                <input type="range" class="form-range" value="0" max="9">
                <button class="btn btn-secondary reload">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button class="btn btn-secondary close">
                    <i class="bi bi-x"></i>
                </button>
                <button class="btn btn-secondary plus">
                    <i class="bi bi-plus"></i>
                </button>
            </div>
        {% endfor %}
    </div>
    <div id="lights" class="container d-flex mt-5 col-12 col-sm-8 justify-content-center">
        {% for i in range(lights) %}
            <div id="{{ 2 * i }}" class="light bg-danger active"></div>
            <div id="{{ 2 * i + 1 }}" class="light bg-primary"></div>
        {% endfor %}
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="{{ app.router.static.url_for(filename='script.js') }}"></script>
</body>

</html>
